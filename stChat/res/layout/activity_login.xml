<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.st.stchat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23D5E3" >

    <com.st.stchat.widget.CircularImageView
        android:id="@+id/login_picture"
        android:layout_width="88dip"
        android:layout_height="88dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_nor_man"
        app:civ_border="true"
        app:civ_border_color="#FFFFFFFF"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_picture"
        android:layout_marginTop="27dp" >

        <LinearLayout
            android:id="@+id/ll_user_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="54dp"
                android:layout_height="match_parent" 
                android:scaleType="centerInside"
                android:padding="5dp"
                android:src="@drawable/geren_bai"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="#23D5E3"
                android:hint="Enter your name"
                android:inputType="text"
                android:maxLength="12"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_info_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_user_info_name"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/login_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="54dp"
                android:layout_height="match_parent" 
                android:scaleType="centerInside"
                android:padding="5dp"
                android:src="@drawable/mima_bai"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="#23D5E3"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_info_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_user_info_password"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/login_btn"
            android:orientation="horizontal"
            android:padding="2dp" >

            <Button
                android:id="@+id/butt_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#50FFFFFF"
                android:text="@string/login"
                android:textColor="#FC9931"
                android:textSize="17sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <Button
                android:id="@+id/butt_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#23D5E3"
                android:text="@string/register"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- <com.qq.view.TextURLView -->
    <!-- android:id="@+id/tv_forget_password" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_alignParentBottom="true" -->
    <!-- android:layout_alignParentLeft="true" -->
    <!-- android:layout_marginBottom="20dp" -->
    <!-- android:layout_marginLeft="20dp" -->
    <!-- android:text="@string/forget_password" -->
    <!-- android:textSize="18sp" -->
    <!-- android:textColor="@color/blue"/> -->

    <Button
        android:id="@+id/butt_ipsetting"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/register_user_btn"
        android:text="@string/ip_setting"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>