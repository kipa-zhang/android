<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybgc"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="54dp"
        layout="@layout/common_title" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#F0ECE0" >
    </View>
    <ListView
        android:id="@+id/lv_mainlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:divider="#FFFFFF"
        android:listSelector="#00000000" >
    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#F0ECE0" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/iv_singlechat_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:src="@drawable/singlechat_pic" />

        <ImageView
            android:id="@+id/iv_singlechat_emoji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
             android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/singlechat_emoji" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="11"
            android:background="@drawable/send_edittext"
            android:gravity="left|center_vertical"
            android:hint="Please input the content"
            android:inputType="textMultiLine"
            android:maxEms="11"
            android:textColor="#000000"
            android:textColorHint="#EEEDE5"
            android:textSize="@dimen/text_size_singlechat" >
        </EditText>

        <TextView
            android:id="@+id/tv_voice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="11"
            android:background="@drawable/send_textview"
            android:gravity="center"
            android:maxEms="11"
            android:text="@string/hold_a_speech"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_singlechat"
            android:visibility="gone" >
        </TextView>

        <ImageView
            android:id="@+id/iv_singlechat_voice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
             android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/singlechat_voice" />

        <ImageView
            android:id="@+id/iv_singlechat_keyboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:scaleType="centerInside"
             android:padding="4dp"
            android:src="@drawable/singlechat_keyboard"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_singlechat_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:scaleType="centerInside"
             android:padding="4dp"
            android:src="@drawable/singlechat_send_lan"
            android:visibility="gone" />

        <Button
            android:id="@+id/butt_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectorandshap"
            android:text="@string/send"
            android:textColor="#FFFFFF"
            android:visibility="gone" >
        </Button>
    </LinearLayout>

</LinearLayout>