<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#DEF6FF" />

            <solid android:color="#9FA4A0"></solid>

            <gradient android:angle="45" android:endColor="#F0CF3C" android:startColor="#B3B2B7" />

            <corners android:radius="9dp" />

            <padding android:bottom="2dp" android:left="11dp" android:right="11dp" android:top="2dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#DEF6FF" />

            <solid android:color="#9FA4A0"></solid>

            <gradient android:angle="45" android:endColor="#F0CF3C" android:startColor="#B3B2B7" />

            <corners android:radius="9dp" />

            <padding android:bottom="1dp" android:left="10dp" android:right="10dp" android:top="1dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#DEF6FF" />

            <solid android:color="#9FA4A0"></solid>

            <gradient android:angle="45" android:endColor="#FCF89C" android:startColor="#FCF89C" />

            <corners android:radius="9dp" />

            <padding android:bottom="1dp" android:left="10dp" android:right="10dp" android:top="1dp" />
        </shape></item>

</selector>