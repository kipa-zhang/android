<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="45" android:endColor="#F0CF3C" android:startColor="#F0CF3C" />

            <corners android:radius="7dp" />

            <padding android:bottom="5dp" android:left="11dp" android:right="7dp" android:top="5dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="45" android:endColor="#F0CF3C" android:startColor="#F0CF3C" />

            <corners android:radius="7dp" />

            <padding android:bottom="5dp" android:left="11dp" android:right="7dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="45" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <corners android:radius="7dp" />

            <padding android:bottom="5dp" android:left="11dp" android:right="7dp" android:top="5dp" />
        </shape></item>

</selector>